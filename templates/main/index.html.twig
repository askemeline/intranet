{% extends 'main/base_main.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    {% if is_granted('ROLE_TEACHER')%}
        <h1>Your discpline(s)</h1> <br>
        {% if discipline_teacher is empty %}
            ❌  Not discipline for the moment
        {% else %}
            {% for discipline_teachers in discipline_teacher %}
             🎯 {{ discipline_teachers }}<br>
            {% endfor %}
        {% endif %}

    {% else %}
        <h1>All Disciplines</h1>
        {% if disciplines is empty %}
            ❌  Not discipline  for the moment
        {% else %}
        {% for discipline in disciplines %}
            {{ discipline }}<br>
        {% endfor %}
            {% endif %}
        <br><br>

        <h1>Register discipline</h1>
        {% if disciplines is empty %}
            ❌ Not discipline register for the moment
        {% else %}
        {% for discipline in disciplines %}
            👉 <a href="{{ path('discipline',{'id':discipline.id}) }}"> {{ discipline }}<br></a>
            {% endfor %}
         {% endif %}
        <br>

       <h1>Your Disciplines</h1>
        {% if disciplines_user is empty %}
            ❌ Not discipline for the moment
            {% else %}
            {% for disciplines_users in disciplines_user %}
                ✔️ {{ disciplines_users }}<br>
            {% endfor %}
        {% endif %}
    {% endif %}
{% endblock %}